<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:f="http://schemas.android.com/apk/res/itstudio.travel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    
    android:orientation="vertical" >
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="44dip"
	    android:gravity="center_vertical"
	    android:orientation="horizontal"
	    android:background="@drawable/title_bg" 
	    android:padding="0.0px" >
	    <RelativeLayout
	        android:layout_width="wrap_content"
	    	android:layout_height="fill_parent">
	    	<LinearLayout 
	    	    android:id="@+id/back_layout"
	    	    android:gravity="center"
	    	    android:clickable="true"
	    	    android:onClick="back"
	    	    android:layout_width="wrap_content"
		        android:layout_height="fill_parent"
			    android:orientation="horizontal">
			    <ImageButton
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="5dip"
			        android:background="@drawable/arrow_back"
			        android:gravity="center"
			        android:includeFontPadding="false" />
			    <TextView
			        android:id="@+id/ivTitleLoaction"
			        style="@style/A1_Font"
			        android:textColor="@color/white"
			        android:layout_width="wrap_content"
			        android:layout_height="match_parent"
			        android:ellipsize="end"
			        android:gravity="center"
			        android:textSize="20sp"
			        android:paddingLeft="6.0dip"
			        android:singleLine="true"
			        android:text="@string/zhengzhou"  />
	    	</LinearLayout>
	        <TextView 
	            android:id="@+id/title_category"
		       	android:layout_width="match_parent"
		       	android:layout_height="match_parent"
		       	android:text="@string/sight_preview" 
		       	android:textSize="20sp"
		       	android:textColor="@color/white"
		       	android:gravity="center"/>
		    
	    </RelativeLayout>
	</LinearLayout>
	

	    <FrameLayout
       	android:padding="10dip"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:background="#f1f1f1"
    	android:orientation="horizontal" >
        <EditText 
            android:paddingLeft="35dip"
            android:id="@+id/keywords"
           	android:layout_height="35dip"
		    android:layout_width="match_parent"
		    android:hint="景点名称" 
		    android:gravity="center_vertical"
            android:background="@drawable/search_bg"
            android:singleLine="true"
            />
		<ImageView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/icon_sousuo"			    
		    android:layout_gravity="center_vertical"
		    android:layout_marginLeft="10dip"
		    />
    </FrameLayout>
    
 	<FrameLayout
        android:layout_width="match_parent"
   		android:layout_height="150dip" >
       <ImageView 
        android:id="@+id/quanjing_img"
	    android:layout_margin="10dip"
      	android:layout_width="match_parent"
   		android:layout_height="150dip"
   		android:scaleType="centerCrop"
   		android:src="@drawable/pic_quanjiang"/>
       <ImageView 
	    android:layout_marginBottom="5dip"
      	android:layout_width="wrap_content"
   		android:layout_height="wrap_content"
   		android:layout_gravity="bottom|right"
   		android:layout_marginRight="15dip"
   		
   		android:src="@drawable/icon_full_screen"/>
 	</FrameLayout>

    	
	<TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="郑州异国风情街"
	    android:layout_marginLeft="10dip"
	    android:textSize="@dimen/xlarge_text_size"
	    android:textColor="@color/black"
	    />
	
	   <itstudio.travel.widget.FlowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dip"
        android:paddingRight="10dip"
        android:paddingTop="6dip"
        f:horizontalSpacing="12dip"
        f:verticalSpacing="8dip" >

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="当前位置"
              android:textColor="@color/black"
              android:textSize="18sp" />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="德国街"
              android:background="@color/green"
              android:textColor="@color/white"
              android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="购物中心"
                android:textColor="@color/text_black_normal"
                android:textSize="15sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="东心喷泉"
                android:textColor="@color/text_black_normal"
                android:textSize="15sp" />
             <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="德意酒吧"
                android:textColor="@color/text_black_normal"
                android:textSize="15sp" /> 
             <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="卢森堡公园"
                android:textColor="@color/text_black_normal"
                android:textSize="15sp" /> 
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="巴洛克大教堂"
                android:textColor="@color/text_black_normal"
                android:textSize="15sp" /> 
    </itstudio.travel.widget.FlowLayout>
    <TextView 
           android:layout_margin="10dip"
           android:id="@+id/intro"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="简介"
           android:textColor="@color/black"
        />
</LinearLayout>
