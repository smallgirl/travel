<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dip"
    android:background="#ffffff"
    android:gravity="center"
    android:paddingTop="10dip"
    android:paddingBottom="10dip"
    android:orientation="horizontal" >
    <ImageView 
        android:id="@+id/food_img"
        android:layout_width="120dip"
    	android:layout_height="match_parent"
    	android:src="@drawable/pic_nearfoods1"
    	android:scaleType="centerCrop"
        />
    <LinearLayout 
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_width="wrap_content"
        android:layout_weight="1"
    	android:layout_height="match_parent"
    	android:orientation="vertical">
		<LinearLayout 
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal"
	        >  
	        <TextView 
	            android:id="@+id/cater_title"
	            android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:textSize="18sp"
	    		android:singleLine="true"
	    		android:gravity="bottom"
	    		android:layout_gravity="bottom"
	    		android:text="5hours优质火锅"
	    		android:textColor="@color/text_black_normal"
	            />
 
	    </LinearLayout>

		<TextView
		    android:id="@+id/cater_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:textColor="@color/text_black_normal"
            android:textSize="14sp"
            android:text="仅售66元,价值101元2-3人餐！纸巾免费，免费wifi，免费唱歌，提供餐后免费打包服务，10余种酱料，多种小吃，水果无限量供应！" />

	   <RelativeLayout 
	        android:layout_width="match_parent"
	    	android:layout_height="28dp"
	    	android:orientation="horizontal"
	    	android:gravity="bottom"
	        >  

	       <TextView
	            android:id="@+id/price"
	            android:layout_width="wrap_content"
	            android:layout_height="28dp"
	            android:gravity="bottom"
	            android:layout_alignParentBottom="true"
	            android:text="￥30"
	            android:layout_marginBottom="-5dip"
	            android:textColor="#afdf71"
	            android:textSize="28sp" /> 

	          <TextView
	            android:layout_toRightOf="@id/price"
	            android:id="@+id/textView1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentBottom="true"
	            android:text="￥45" 
	            
	            android:textColor="#7f7f7f"
	            android:textSize="15sp" />

	        <TextView
	            android:id="@+id/buy_num"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:singleLine="true"
	            android:gravity="center"
	            android:layout_alignParentRight="true"
	            android:layout_alignParentBottom="true"
	            android:textColor="@color/text_black_normal"
	            android:text="738" />	
       
	        <ImageView 
	            android:id="@+id/icon_buy_num"
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"	            
	            android:src="@drawable/icon_buy_num"
	            android:layout_toLeftOf="@id/buy_num"
	            android:layout_alignParentBottom="true"
	            android:paddingBottom="2dp"
	            />
	      <TextView 
	            android:id="@+id/cater_distance"
	            android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:singleLine="true"
	    		android:textSize="14sp"
	    		android:textColor="@color/text_black_normal"
	    		android:text="距离100米"
	    		android:layout_toLeftOf="@id/icon_buy_num"
	    		android:layout_alignParentBottom="true"
	    		android:paddingRight="8dp"
	            />	 
     	     <ImageView 
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"	            
	            android:src="@drawable/icon_distance"
	            android:layout_toLeftOf="@id/cater_distance"
	            android:layout_alignParentBottom="true"
	            android:paddingBottom="2dp"
	            />
	      
	    </RelativeLayout>
    </LinearLayout>
</LinearLayout>