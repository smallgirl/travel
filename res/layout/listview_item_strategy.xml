<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dip"
    android:background="@drawable/listview_item_bg"
    android:gravity="center"
    android:orientation="horizontal" >
    <ImageView 
        android:id="@+id/strategy_img"
        android:layout_margin="5dip"
        android:layout_width="fill_parent"
    	android:layout_height="match_parent"
    	android:layout_weight="3"
    	android:src="@drawable/pic_strategy1"
    	android:scaleType="centerCrop"
        />
	   <LinearLayout 
	       android:layout_marginTop="5dip"
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal"
	    	android:layout_gravity="bottom"
	    	android:background="#7f667165"
	    	android:padding="5dip"
	    	android:layout_margin="5dip"
	        >  
	        <ImageView 
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"	            
	            android:src="@drawable/icon_strategy_title"
	            />
	        <TextView 
	            android:id="@+id/stgy_title"
	            android:layout_width="0dip"
	    		android:layout_height="match_parent"
	    		android:layout_weight="3"
	    		android:singleLine="true"
	    		android:textSize="14sp"
	    		android:textColor="@color/white"
	    		android:gravity="center_vertical"
	    		android:text="@string/test_strategy_title"
	            />
	        <ImageView 
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"	            
	            android:src="@drawable/icon_strategy_author"
	            />	 
	        <TextView
	            android:id="@+id/stgy_author"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="2"
	            android:singleLine="true"
	            android:gravity="center_vertical"
	            android:textColor="@color/white"
	            android:text="@string/test_strategy_author" />
      
	    </LinearLayout>
</FrameLayout>