<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_buy"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/goumai_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp" 
        android:layout_marginRight="10dp"
        >

        <TextView
            android:id="@+id/rmb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="￥"
            android:textColor="#afdf71"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/rmb"
            android:gravity="center_vertical"
            android:text="30"
            android:textColor="#afdf71"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/rmb2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/price"
            android:gravity="center_vertical"
            android:text="￥"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/rmb2"
            android:gravity="center_vertical"
            android:text="45"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_xiexian"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/textView1"
            android:layout_centerVertical="true"
            android:src="@drawable/xiexian" />

        <Button
            android:id="@+id/bt_qinggou"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/gouwuche"
            android:background="@drawable/bt_qianggou"
            android:text="立即购买"
            android:textColor="#ffffff" />

        <ImageButton
            android:id="@+id/gouwuche"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/gouwu_gwcbj"
            android:src="@drawable/gouwu_tianjia" />
    </RelativeLayout>

</LinearLayout>