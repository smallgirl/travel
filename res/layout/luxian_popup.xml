<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/gaosimohu"
        android:padding="10dp" >

        <EditText
            android:id="@+id/start"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_toLeftOf="@+id/zhibiao"
            android:background="@drawable/wenbenkuang"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="起点"
            android:text="郑州轻工业学院"
            />

        <EditText
            android:id="@+id/end"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/zhibiao"
            android:background="@drawable/wenbenkuang"
            android:gravity="center_vertical"
            android:ems="10"
            android:hint="终点"
            android:text="郑州大学"
             >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/btsearch"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_alignRight="@+id/end"
            android:layout_below="@+id/end"
            android:background="@drawable/search_btn_selector"
            android:text="搜索"
            android:textColor="#ffffff" />

        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/start"
            android:layout_below="@+id/end"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/radio_gongjiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:background="@drawable/radio_gongjiao"
                android:button="@null"
                android:checked="true" />

            <RadioButton
                android:id="@+id/radio_chuzu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:background="@drawable/radio_chuzu"
                android:button="@null" />

            <RadioButton
                android:id="@+id/radio_buxing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/radio_buxing"
                android:button="@null" />
        </RadioGroup>

        <ImageView
            android:id="@+id/zhibiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/start"
            android:layout_alignTop="@+id/start"
            android:layout_centerHorizontal="true"
            android:src="@drawable/zhibiao" />

    </RelativeLayout>

</RelativeLayout>