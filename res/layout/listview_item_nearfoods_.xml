<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dip"
    android:background="@drawable/listview_item_bg"
    android:gravity="center"
    android:orientation="horizontal" >
    <ImageView 
        android:id="@+id/food_img"
        android:layout_margin="5dip"
        android:layout_width="0dip"
    	android:layout_height="match_parent"
    	android:layout_weight="3"
    	android:src="@drawable/pic_nearfoods1"
    	android:scaleType="centerCrop"
        />
    <LinearLayout 
        android:layout_width="0dip"
    	android:layout_height="match_parent"
    	android:layout_weight="4"
    	android:orientation="vertical"
    	android:layout_marginTop="5dip"
    	android:layout_marginBottom="5dip"
    	android:layout_marginRight="5dip"
        >
		<LinearLayout 
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal"
	        >  
	        <TextView 
	            android:id="@+id/cater_title"
	            android:layout_width="0dip"
	    		android:layout_height="match_parent"
	    		android:layout_weight="1"
	    		android:textSize="18sp"
	    		android:singleLine="true"
	    		android:gravity="center_vertical"
	    		android:text="洞庭土菜馆"
	    		android:textColor="@color/text_black_normal"
	            />
	        <TextView
	            android:layout_width="50dip"
	            android:layout_height="21.4dip"
	            android:layout_weight="0"
	            android:background="@drawable/icon_qianggou"
	            android:singleLine="true"
	            android:gravity="center"
	            android:textColor="@color/white"
	            android:text="抢购" />
	    </LinearLayout>
	    <ImageView 
	        android:layout_marginTop="5dip"
	        android:layout_width="match_parent"
	    	android:layout_height="10dip"
	    	android:background="@drawable/repeat_split_line_foods"
	        />
		<TextView
		    android:id="@+id/cater_info"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:lines="4"
            android:textColor="@color/text_black_normal"
            android:textSize="14sp"
            android:paddingBottom="5dip"
            android:text="仅售42元，价值49元信阳店正宗韩式自助烤肉晚餐！精选优质新鲜食材，菜品美味丰盛，口感地道正宗，营养丰富，价格实惠，环境温馨舒适，节假日通用！" />
	    <ImageView 
	        android:layout_width="match_parent"
	    	android:layout_height="10dip"
	    	android:background="@drawable/repeat_split_line_foods"
	        />
	   <LinearLayout 
	       android:layout_marginTop="5dip"
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal"
	    	android:gravity="center_vertical"
	        >  
	        <ImageView 
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"	            
	            android:src="@drawable/icon_distance"
	            />
	        <TextView 
	            android:id="@+id/cater_distance"
	            android:layout_width="0dip"
	    		android:layout_height="match_parent"
	    		android:layout_weight="1"
	    		android:singleLine="true"
	    		android:textSize="14sp"
	    		android:textColor="@color/text_black_normal"
	    		android:gravity="center_vertical"
	    		android:text="距离100米"
	            />
	        <ImageView 
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"	            
	            android:src="@drawable/icon_zan"
	            />	 
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="0"
	            android:singleLine="true"
	            android:gravity="center"
	            android:textColor="@color/text_black_normal"
	            android:text="评分" />
	        <RatingBar 
	            android:id="@+id/cater_ratingBar"
	            android:progressDrawable="@drawable/my_ratingbar"
	           	android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            style="?android:attr/ratingBarStyleSmall"
	            android:rating="4"
	            />       
	    </LinearLayout>
    </LinearLayout>
</LinearLayout>