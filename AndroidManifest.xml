<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="itstudio.travel"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="14" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true" />

    <application
        android:screenOrientation="portrait"
        android:configChanges="orientation|keyboardHidden"
        android:allowBackup="true"
        android:icon="@drawable/icon_launcher"
        android:label="@string/app_name"
        android:name="itstudio.travel.ui.MyApplication"
        android:theme="@*android:style/Theme.NoTitleBar" >
        <activity
            android:name="itstudio.travel.ui.WelcomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            android:name="itstudio.travel.ui.MainActivity"
            android:label="@string/app_name" >
        </activity>

        <activity
            android:name="itstudio.travel.ui.GuideActivity"
            android:label="@string/app_name" >
        </activity>
        <activity  android:name="itstudio.travel.fragment.TabCatering" />
        <activity  android:name="itstudio.travel.fragment.TabStrategy" />
        <activity  android:name="itstudio.travel.ui.NearFoodDetail" />
        
    <activity android:name="itstudio.travel.sortlistview.ChooseCityActivity" android:theme="@style/MyDialogStyleBottom" /> 
    <activity android:name="itstudio.travel.ui.LoginActivity" android:theme="@style/MyDialogStyleBottom" /> 
    </application>

</manifest>